<%- include('partials/MasterHeader') %>

</div>
<div class="col-md-10">
  <h2>My Purchases</h2>
  <% if (orders.length > 0) { %>
    <div class="table-responsive">
      <table class="table table-dark table-bordered">
        <thead>
          <tr>
            <th>Purchase Date</th>
            <th>Status</th>
            <th>Seller</th>
            <th>Item</th>
            <th>Amount</th>
            <th>Price</th>
          </tr>
        </thead>
        <tbody>
          <% orders.forEach((order, index) => { %>
            <tr>
              <td><%= order.formattedDate %></td>
              <td><%= order.order_status %></td>
              <td><%= order.seller %></td>
              <td>
                <% let isFirstItem = true; %>
                <% accountsDetails.forEach((detail) => { %>
                  <% if (detail.order_id === order.id) { %>
                    <% if (!isFirstItem) { %>
                      <br> <!-- Add a line break if it's not the first item -->
                    <% } else { %>
                      <% isFirstItem = false; %>
                    <% } %>
                    <% if (detail.account_id === 1) { %>
                      Food
                    <% } else if (detail.account_id === 2) { %>
                      Wood
                    <% } else if (detail.account_id === 3) { %>
                      Stone
                    <% } else if (detail.account_id === 4) { %>
                      Gold
                    <% } else { %>
                      <%= detail.account_id %>
                    <% } %>
                  <% } %>
                <% }); %>
              </td>
              <td>
                <% let isFirstAmount = true; %>
                <% accountsDetails.forEach((detail) => { %>
                  <% if (detail.order_id === order.id) { %>
                    <% if (!isFirstAmount) { %>
                      <br> <!-- Add a line break if it's not the first amount -->
                    <% } else { %>
                      <% isFirstAmount = false; %>
                    <% } %>
                    <%= detail.amount * 100 %>M
                  <% } %>
                <% }); %>
              </td>
              <td><%= order.price %>â‚¬</td>
            </tr>
          <% }); %>
        </tbody>
      </table>
    </div>
    
    

    <nav aria-label="Page navigation">
      <ul class="pagination justify-content-center">
        <% for (let i = 1; i <= totalPages; i++) { %>
          <li class="page-item <%= currentPage === i ? 'active' : '' %>">
            <a class="page-link" href="/myPurchases?page=<%= i %>"><%= i %></a>
          </li>
        <% } %>
      </ul>
    </nav>
  <% } else { %>
    <div class="alert alert-info">
      You haven't made any purchases yet.
    </div>
  <% } %>
</div>

<%- include('partials/MasterFooter') %>
