<%- include('partials/MasterHeader') %>
<title>RSS Empire Shop - Reviews</title>
</div>
<div class="container">
    <h1>Add Review</h1> 
    <% if (isLoggedIn) { %>
        <% if (canAddReview) { %>
            <div class="row">
                <form action="/reviews/add" method="post" class="review-form">
                    <div class="form-group">
                        <div class="rate">
                            <input type="radio" id="star5" name="rating" value="5" />
                            <label for="star5" title="5 stars"></label>
                            <input type="radio" id="star4" name="rating" value="4" />
                            <label for="star4" title="4 stars"></label>
                            <input type="radio" id="star3" name="rating" value="3" />
                            <label for="star3" title="3 stars"></label>
                            <input type="radio" id="star2" name="rating" value="2" />
                            <label for="star2" title="2 stars"></label>
                            <input type="radio" id="star1" name="rating" value="1" />
                            <label for="star1" title="1 star"></label>
                        </div>
                    </div>
                    <div class="form-group">
                        <textarea class="form-control" name="reviewContent" rows="3" placeholder="Write your review here"></textarea>
                    </div>
                    <button type="submit" class="btn btn-primary">Add Review</button>
                </form>
            </div>
        <% } else { %>
            <p class="alert alert-warning">You cannot add a review because you haven't placed any orders yet.</p>
        <% } %>
    <% } else { %>
        <p class="alert alert-danger">Please login to be able to add a review.</p>
    <% } %>
    
    <h2>All Reviews</h2>
    <div class="row ">
        <ul class="list-group review-list">
            <% reviews.forEach(review => { %>
                <li class="list-group-item bg-dark text-white border-black ">
                    <b><%= review.username %></b>
                    <div class="review-rating">
                        <% for (let i = 0; i < review.stars; i++) { %>
                            <span class="star">&#9733;</span>
                        <% } %>
                    </div>
                    <div class="review-content"><%= review.content %></div>
                </li>
            <% }); %>
        </ul>
    </div>
</div>
<%- include('partials/MasterFooter') %>
